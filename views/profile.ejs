<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                        <strong>transactions</strong>: <%= user.local.transactions %>
                    </p>
                <% } %>
                   

            </div>
        </div>

<!-- Deposit/Withdraw -->
<div class="col-sm-6">
            <div class="well">
                <form action="/transaction" method='post'>
                <h3><span class="fa fa-user"></span> Local</h3>
                <input type="hidden" value=<%= user._id%> name='id'>
                <input type="number" name="amount" placeholder="Enter positive amount for deposit, negative for withdraw" class="col-sm-12">
                <input type="text" name='description' placeholder="Description" class='col-sm-12' >
              <!--   <a href="/transaction/" class='btn btn-default'> -->
              <button type="submit">Complete Transaction</button>
          <!-- </a> -->
            </form>
            </div>
        </div>

</div>
</body>
</html>
